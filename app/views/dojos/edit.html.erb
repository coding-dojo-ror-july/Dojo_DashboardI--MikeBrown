<h1>Edit <%= @dojo.branch %></h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>	

<form action="/dojos/<%= @dojo.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	
		Branch: <input type="text" name="dojo[branch]" value="<%= @dojo.branch %>">
        <br>
        <br>
	
        Street: <input type="text" name="dojo[street]" value="<%= @dojo.street %>">
        <br>
        <br>
	
		City: <input type="text" name="dojo[city]" value="<%= @dojo.city %>">
        <br>
        <br>
	
	    State: <input type="text" name="dojo[state]" value="<%= @dojo.state %>">
        <br>
        <br>
	<input type="submit" name="Update Dojo">	
</form>

<%= link_to "Back", root_path %>